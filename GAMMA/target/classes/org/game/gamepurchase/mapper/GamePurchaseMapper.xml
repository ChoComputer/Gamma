<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.game.gamepurchase.mapper.GamePurchaseMapper">
	
	<select id="paymentSelect">
		SELECT * FROM consumerPayment WHERE cid=#{cid}
	</select>
	
	<insert id="paymentInsert">
		INSERT INTO consumerPayment(gname, gprice, cid, merchant_uid) VALUES (#{gname}, #{gprice}, #{cid}, #{merchant_uid})
	</insert>
	
</mapper>